    printf "Report this bug? (y/N) "
    read -r reply
    
    if [[ ! "$reply" =~ ^[Yy]$ ]]; then
        echo "Bug report cancelled by user"
        return 0
    fi
    
    # User confirmed - proceed with duplicate check and reporting
    handle_duplicate_detection "$title" "$bug_report" "$repo_url"
}

